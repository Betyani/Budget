<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controller.EntryDialogController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- 헤더 -->
    <VBox spacing="6">
        <Label text="수입/지출 입력"/>
        <HBox spacing="8">
            <Label text="날짜:"/>
            <Label fx:id="dateLabel" text="-"/>
        </HBox>
        <Separator/>
    </VBox>

    <!-- 입력 폼 -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="70" prefWidth="80"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <!-- 구분 -->
        <Label text="구분" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <HBox spacing="12" GridPane.rowIndex="0" GridPane.columnIndex="1">
            <RadioButton fx:id="incomeRadio" text="수입"/>
            <RadioButton fx:id="expenseRadio" text="지출"/>
        </HBox>

        <!-- 항목 -->
        <Label text="항목" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="categoryCombo"
                  promptText="카테고리 선택"
                  GridPane.rowIndex="1"
                  GridPane.columnIndex="1"
                  maxWidth="1.7976931348623157E308"/>

        <!-- 금액 -->
        <Label text="금액" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="amountField"
                   promptText="숫자만 입력 (예: 15000)"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="1"/>

        <!-- 메모 -->
        <Label text="메모" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextArea fx:id="memoArea"
                  promptText="메모 (선택)"
                  prefRowCount="4"
                  wrapText="true"
                  GridPane.rowIndex="3"
                  GridPane.columnIndex="1"/>
    </GridPane>

    <!-- 버튼 -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="취소" onAction="#onCancel"/>
        <Button text="저장" defaultButton="true" onAction="#onSave"/>
    </HBox>



</VBox>
