<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.controller.DetailDialogController"
      prefHeight="400.0" prefWidth="600.0"
      stylesheets="@/css/detailDialog.css"
      styleClass="dialog-root">

    <!-- 상단: 날짜 -->
    <HBox spacing="10" styleClass="header">
        <Label text="日付:" styleClass="muted"/>
        <Label fx:id="dateLabel" styleClass="date-badge"/>
        <Pane HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- 리스트 -->
    <TableView fx:id="table" styleClass="tx-table">
        <columns>
            <TableColumn fx:id="typeCol" text="区分"/>
            <TableColumn fx:id="categoryCol" text="項目"/>
            <TableColumn fx:id="amountCol" text="金額"/>
            <TableColumn fx:id="memoCol" text="メモ"/>
        </columns>
    </TableView>

    <!-- 합계 -->
    <HBox spacing="16" styleClass="summary">
        <Label text="収入合計:" styleClass="muted"/>
        <Label fx:id="incomeSumLabel" text="0">
            <styleClass>
                <String fx:value="pill"/>
                <String fx:value="income"/>
            </styleClass>
        </Label>
        <Label text="支出合計:" styleClass="muted"/>
        <Label fx:id="expenseSumLabel" text="0">
            <styleClass>
                <String fx:value="pill"/>
                <String fx:value="expense"/>
            </styleClass>
        </Label>
    </HBox>

    <!-- 버튼 -->
    <HBox spacing="10" styleClass="actions">
        <Button text="追加" onAction="#onAdd">
            <styleClass>
                <String fx:value="btn"/>
                <String fx:value="primary"/>
            </styleClass>
        </Button>
        <Button text="修正" onAction="#onEdit">
            <styleClass>
                <String fx:value="btn"/>
                <String fx:value="ghost"/>
            </styleClass>
        </Button>
        <Button text="削除" onAction="#onDelete">
            <styleClass>
                <String fx:value="btn"/>
                <String fx:value="danger"/>
            </styleClass>
        </Button>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="閉じる" onAction="#onClose">
            <styleClass>
                <String fx:value="btn"/>
                <String fx:value="ghost"/>
            </styleClass>
        </Button>
    </HBox>

</VBox>
