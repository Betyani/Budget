<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controller.CalendarController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- 상단: 이전/다음달 버튼 + 현재 월 표시 -->
    <top>
        <HBox spacing="10" alignment="center">
            <children>
                <Button fx:id="prevMonthButton" text="◀"/>
                <Label fx:id="monthLabel" text="0000년 00월"/>
                <Button fx:id="nextMonthButton" text="▶"/>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </HBox>
    </top>

    <!-- 가운데: 달력 그리드 -->
    <center>
        <GridPane fx:id="calendarGrid"
                  hgap="5" vgap="5"
                  alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </GridPane>
    </center>

</BorderPane>
