<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.controller.CalendarController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- 상단: 이전/다음달 버튼 + 현재 월 표시 -->
    <top>
        <HBox spacing="10" alignment="center">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="prevMonthButton" text="◀"/>
            <Label fx:id="monthLabel" text="0000년 00월"/>
            <Button fx:id="nextMonthButton" text="▶"/>
        </HBox>
    </top>

    <!-- 가운데: 달력 그리드 -->
    <center>
        <VBox spacing="10" alignment="CENTER">
        <GridPane fx:id="dayOfWeekGrid" hgap="5" vgap="5" alignment="CENTER" />
        <GridPane fx:id="calendarGrid"
                  hgap="5" vgap="5"
                  alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </GridPane>
        </VBox>
    </center>

</BorderPane>
